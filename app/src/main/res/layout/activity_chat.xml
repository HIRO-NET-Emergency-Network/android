<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/message_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        tools:listitem="@layout/message_incoming"
        android:layout_above="@+id/chat_messageBox" />

    <LinearLayout
        android:id="@+id/chat_messageBox"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/txtMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/chat_sampleContent"
            android:textColor="#CFD8DC"
            android:textColorHint="#CFD8DC" />
        <ImageView
            android:id="@+id/chat_sendButton"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/ic_send"
            android:contentDescription="@string/chat_sendButton" />
    </LinearLayout>
</RelativeLayout>